{
  "name": "opendevbrowser",
  "version": "0.1.0",
  "description": "OpenCode plugin for script-first browser automation.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "skills",
    "extension/manifest.json",
    "extension/popup.html",
    "extension/dist",
    "extension/icons"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "test": "vitest run --coverage",
    "extension:sync": "node scripts/sync-extension-version.mjs",
    "extension:build": "npm run extension:sync && tsc -p extension/tsconfig.json",
    "extension:pack": "cd extension && zip -r ../opendevbrowser-extension.zip manifest.json popup.html dist/ icons/",
    "prepack": "npm run build && npm run extension:build"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.203",
    "@puppeteer/browsers": "^2.2.0",
    "jsonc-parser": "^3.2.0",
    "playwright-core": "^1.49.1",
    "ws": "^8.17.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.270",
    "@types/node": "^20.14.10",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.12.0",
    "happy-dom": "^20.0.11",
    "typescript": "^5.6.2",
    "vitest": "^4.0.16"
  }
}
